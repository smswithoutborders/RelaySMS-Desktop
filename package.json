{
  "name": "relaysms",
  "version": "0.1.0",
  "private": true,
  "main": "./public/electron.js",
  "author": "RelaySMS <developers@smswithoutborders.com>",
  "description": "Relay SMS Desktop App",
  "homepage": "./",
  "category": "Communication",
  "website": "https://relaysms.com",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@grpc/grpc-js": "^1.10.8",
    "@grpc/proto-loader": "^0.7.13",
    "@mui/material": "^5.15.16",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "assert": "^2.1.0",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "constants-browserify": "^1.0.0",
    "electron-json-storage": "^4.6.0",
    "google-protobuf": "^3.21.2",
    "i18next": "^23.11.4",
    "prop-types": "^15.8.1",
    "protobufjs": "^7.3.0",
    "react": "^18.3.1",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.1.1",
    "react-icons": "^5.2.1",
    "react-phone-number-input": "^3.4.1",
    "react-router-dom": "^6.23.0",
    "react-scripts": "5.0.1",
    "safe-storage": "^1.0.2",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "preelectron-pack": "yarn build",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js",
    "electron:package:win": "yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js",
    "electron:package:linux": "yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 electron version",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@electron-forge/maker-deb": "^7.4.0",
    "@testing-library/dom": "^10.1.0",
    "browserify-zlib": "^0.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "file-loader": "^6.2.0",
    "https-browserify": "^1.0.0",
    "jest": "^29.7.0",
    "node-libs-browser": "^2.2.1",
    "stream-http": "^3.2.0",
    "url": "^0.11.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "RelaySMS",
    "productName": "RelaySMS",
    "copyright": "Copyright Â© 2024 ${author}",
    "files": [
      "build/**/*",
      "./dist/**/*",
      "./public/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg",
      "icon": "/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "./public/icon.ico",
      "publisherName": "Afkanerd"
    },
    "linux": {
      "target": "deb",
      "category": "Communication",
      "icon": "./public/icon.png"
    }
  }
}
